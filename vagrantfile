# -*- mode: ruby -*-
# vi: set ft=ruby :

# Vagrantfile API/syntax version. Don't touch unless you know what you're doing!
VAGRANTFILE_API_VERSION = "2"

Vagrant.configure(VAGRANTFILE_API_VERSION) do |config|

  base_box = "ubuntu/precise64"

  masters = [:master,:node0,:node1]
  k = 0
  masters.each_with_index do |node, index|
    config.vm.define node do |node|
      ip = k + index
      node.vm.box = base_box
      node.vm.network :private_network, ip: "192.168.8.10#{ip}"
      node.vm.provider :virtualbox do |vb|
        vb.customize ["modifyvm", :id, "--memory", "4096"]
      end
    end
  end

  # config.vm.provision "ansible" do |ansible|
  #   ansible.playbook = "horton-cluster.yml"
  #   ansible.inventory_path = "hdp.hosts"
  #   ansible.limit = 'all'
  # end

end